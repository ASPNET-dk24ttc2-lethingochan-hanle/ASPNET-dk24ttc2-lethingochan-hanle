        <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
            <div class="text-center mb-4">
                @* <img src="~/images/logo.png" alt="Logo" class="mb-2" style="max-height: 80px;" />  *@
                <h3 class="fw-bold text-primary">Đăng nhập</h3>
                <p class="text-muted">Vui lòng nhập email và mật khẩu</p>
            </div>

            <form asp-action="Login" method="post" asp-route-ReturnUrl="@ViewBag.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" />
                        <label for="rememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>
                    <a asp-controller="Customer" asp-action="ForgotPassword" class="small text-decoration-none">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100 text-white ">
                    <i class="fa fa-sign-in-alt "></i> Đăng nhập
                </button>

                @if (!string.IsNullOrWhiteSpace(TempData["ErrorMessage"]?.ToString()))
                {
                    <div class="text-danger mt-2">@TempData["ErrorMessage"]</div>
                }

                <div class="text-center mt-3">
                    <span class="text-muted">Chưa có tài khoản?</span>
                    <a asp-action="SignUp" class="text-decoration-none fw-semibold">Đăng ký ngay</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

