@model ShopCoffee.Database.Payment

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<h1>Hóa đơn #@Model.PaymentId</h1>

<!-- Thông tin khách hàng -->
<div class="mb-4">
    <h4>Thông tin khách hàng</h4>
    <dl class="row">
        <dt class="col-sm-3">Họ:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

        <dt class="col-sm-3">Tên:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

        <dt class="col-sm-3">Số điện thoại:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">Ngày tạo:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreateAt)</dd>

        <dt class="col-sm-3">Tổng tiền:</dt>
        <dd class="col-sm-9">@Model.Total?.ToString("N0") đ</dd>
    </dl>
</div>

<!-- Chi tiết hóa đơn -->
<div class="mb-4">
    <h4>Chi tiết hóa đơn</h4>
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Đồ uống</th>
                <th>Số lượng</th>
                <th>Giá tiền</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PaymentDetails)
            {
                <tr>
                    <td>@item.Product?.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price?.ToString("N0") đ</td>
                    <td>@item.Total?.ToString("N0") đ</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Nút trở lại -->
<a asp-action="Index" class="btn btn-secondary">
    <i class="fa fa-arrow-left me-1"></i> Trở lại
</a>
